<UserControl x:Class="Demolyzer.View.MatchResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:View="clr-namespace:Demolyzer.View"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="2600">
  <UserControl.Resources>
    <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    <Style TargetType="{x:Type DataGridCell}" BasedOn="{StaticResource CellStyle}">
      <Setter Property="Padding" Value="0" />
      <Setter Property="VerticalContentAlignment" Value="Center" />
      <Setter Property="HorizontalContentAlignment" Value="Right" />
    </Style>
    <Style x:Key="ScoreCellStyle" TargetType="{x:Type DataGridCell}" BasedOn="{StaticResource CellStyle}">
      <Setter Property="Padding" Value="0" />
      <Setter Property="VerticalContentAlignment" Value="Center" />
      <Setter Property="HorizontalContentAlignment" Value="Stretch" />
    </Style>
    <Style x:Key="StatsRowStyle" TargetType="{x:Type DataGridRow}" BasedOn="{StaticResource RowStyle}">
      <Setter Property="Background" Value="{Binding RowBackground}" />
    </Style>
  </UserControl.Resources>
    <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="30"/>
      <RowDefinition Height="210"/>
    </Grid.RowDefinitions>

    <Grid Grid.Row="0">
      <ContentPresenter Content="{Binding MapCanvas}"/>
      <TextBlock Text="{Binding DemoTime}" Foreground="Chartreuse" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,0,30"/>
      <Grid VerticalAlignment="Bottom" Height="28">
        <StackPanel Orientation="Horizontal">
          <Button Command="{Binding ResetCommand}" Width="40" IsEnabled="{Binding IsStopEnabled, Mode=OneWay}">
            <!--<Image Source="..\Resources\icons\media-playback-stop-3.png" Width="24" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>--> 
            Stop
          </Button>
          <Button Command="{Binding PauseCommand}" Width="40" IsEnabled="{Binding IsPauseEnabled, Mode=OneWay}">
            <!--<Image Source="..\Resources\icons\media-playback-pause-3.png" Width="24" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>-->
            Pause
          </Button>
          <Button Command="{Binding PlayCommand}" Width="40" IsEnabled="{Binding IsPlayEnabled, Mode=OneWay}">
            <!--<Image Source="..\Resources\icons\media-playback-start-3.png" Width="24" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>-->
            Play
          </Button>
          <TextBlock Text="Rate:" VerticalAlignment="Center" Margin="15,0,3,0" Foreground="LightGray" />
          <Slider Width="100" VerticalAlignment="Center" Maximum="1" Minimum="0" Value="{Binding PlaybackRate}"/>
        </StackPanel>
      </Grid>
      <Border Background="Black" Visibility="{Binding IsError, Converter={StaticResource BoolToVisConverter}}">
        <Border CornerRadius="10" Background="#FF333333"  HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20">
          <TextBlock Text="{Binding DemoError}" FontSize="18" Foreground="Red"/>
        </Border>
      </Border>
    </Grid>
    <Grid Grid.Row="1">
      <Border  Background="Black">
        <Slider Margin="4" VerticalAlignment="Center" Maximum="{Binding PacketCount}" Value="{Binding CurrentPacketIndex}"/>
      </Border>
    </Grid>
    <Grid Grid.Row="2">
      <TabControl>
        <TabItem Header="Team Performance">
          <TabControl>
            <TabItem Header="Lead">
              <Grid>
                <ContentPresenter Content="{Binding TeamLead}"/>
                <View:MatchProgressIndicator/>
              </Grid>
            </TabItem>
            <TabItem Header="Power">
              <Grid>
                <ContentPresenter Content="{Binding TeamPower}"/>
                <View:MatchProgressIndicator/>
              </Grid>
            </TabItem>
            <TabItem Header="Frags per Min">
              <Grid>
                <ContentPresenter Content="{Binding TeamFragsPerMinute}"/>
                <View:MatchProgressIndicator/>
              </Grid>
            </TabItem>
          </TabControl>
        </TabItem>
        <TabItem Header="Scoreboard">
          <Border Background="Black">
            <StackPanel>
              <DataGrid ItemsSource="{Binding Path=CurrentStatsPlayers}" 
              CanUserAddRows="False" 
              CanUserDeleteRows="False" 
              AutoGenerateColumns="False" 
              RowStyle="{StaticResource StatsRowStyle}"
              Background="Transparent"
              Width="Auto" 
              Height="Auto"
              IsReadOnly="True"
              VerticalAlignment="Stretch" 
              HorizontalAlignment="Stretch"
              VerticalGridLinesBrush="Black"
              RowHeaderWidth="0">
                <DataGrid.Columns>
                  <DataGridTextColumn Header="Ping" Binding="{Binding Path=Ping}" Width="35"/>
                  <DataGridTextColumn Header="PL" Binding="{Binding Path=PL}" Width="25"/>
                  <DataGridTextColumn Header="Name" Binding="{Binding Path=Name}" MinWidth="140"/>
                  <DataGridTextColumn Header="Team" Binding="{Binding Path=Team}" TextBlock.TextAlignment="Center"/>
                  <DataGridTemplateColumn Header="Score" CellStyle="{StaticResource ScoreCellStyle}">
                    <DataGridTemplateColumn.CellTemplate>
                      <DataTemplate>
                        <Border Background="{Binding TeamColor}">
                          <TextBlock Text="{Binding Path=Score}" HorizontalAlignment="Right"/>
                        </Border>
                      </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                  </DataGridTemplateColumn>
                  <DataGridTemplateColumn Header="Armor">
                    <DataGridTemplateColumn.CellTemplate>
                      <DataTemplate>
                        <Border>
                          <TextBlock Text="{Binding Path=CurrentValueArmor}" HorizontalAlignment="Right" Foreground="{Binding Path=CurrentArmorColor}"/>
                        </Border>
                      </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                  </DataGridTemplateColumn>
                  <DataGridTextColumn Header="Health" Binding="{Binding Path=CurrentValueHealth}"/>
                  <DataGridTemplateColumn Header="Weapons" Width="110">
                    <DataGridTemplateColumn.CellTemplate>
                      <DataTemplate>
                        <Border>
                          <StackPanel Orientation="Horizontal">
                            <Image Visibility="{Binding HasRL, Converter={StaticResource BoolToVisConverter}}" Source="{Binding ImageRL}" Width="13" Height="13"/>
                            <Image Visibility="{Binding HasLG, Converter={StaticResource BoolToVisConverter}}" Source="{Binding ImageLG}" Width="13" Height="13"/>
                          </StackPanel>
                        </Border>
                      </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                  </DataGridTemplateColumn>

                </DataGrid.Columns>
              </DataGrid>
              <DataGrid ItemsSource="{Binding Path=CurrentStatsTeams}" 
                        CanUserAddRows="False" 
                        CanUserDeleteRows="False" 
                        AutoGenerateColumns="False" 
                        Background="Transparent"
                        Width="Auto" 
                        Height="Auto"
                        IsReadOnly="True"
                        HeadersVisibility="None"
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Stretch"
                        VerticalGridLinesBrush="Black"
                        RowHeaderWidth="0">
                <DataGrid.Columns>
                  <DataGridTextColumn Header="Ping" Binding="{Binding Path=Ping}" Width="35"/>
                  <DataGridTextColumn Header="PL" Binding="{Binding Path=PL}" Width="25"/>
                  <DataGridTextColumn Header="Name" Binding="{Binding Path=Name}" MinWidth="140"/>
                  <DataGridTextColumn Header="Team" Binding="{Binding Path=Team}" TextBlock.TextAlignment="Center"/>
                  <DataGridTemplateColumn Header="Score" CellStyle="{StaticResource ScoreCellStyle}">
                    <DataGridTemplateColumn.CellTemplate>
                      <DataTemplate>
                        <Border Background="{Binding TeamColor}">
                          <TextBlock Text="{Binding Path=Score}" HorizontalAlignment="Right"/>
                        </Border>
                      </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                  </DataGridTemplateColumn>
                  <DataGridTextColumn Header="Armor" Binding="{Binding Path=CurrentValueArmor}"/>
                  <DataGridTextColumn Header="Health" Binding="{Binding Path=CurrentValueHealth}"/>
                  <DataGridTemplateColumn Header="Weapons" Width="110">
                    <DataGridTemplateColumn.CellTemplate>
                      <DataTemplate>
                        <Border>
                          <StackPanel Orientation="Horizontal">
                            <Image Visibility="{Binding HasRL1, Converter={StaticResource BoolToVisConverter}}" Source="{Binding ImageRL}" Width="13" Height="13"/>
                            <Image Visibility="{Binding HasRL2, Converter={StaticResource BoolToVisConverter}}" Source="{Binding ImageRL}" Width="13" Height="13"/>
                            <Image Visibility="{Binding HasRL3, Converter={StaticResource BoolToVisConverter}}" Source="{Binding ImageRL}" Width="13" Height="13"/>
                            <Image Visibility="{Binding HasRL4, Converter={StaticResource BoolToVisConverter}}" Source="{Binding ImageRL}" Width="13" Height="13"/>
                            <Image Visibility="{Binding HasLG1, Converter={StaticResource BoolToVisConverter}}" Source="{Binding ImageLG}" Width="13" Height="13"/>
                            <Image Visibility="{Binding HasLG2, Converter={StaticResource BoolToVisConverter}}" Source="{Binding ImageLG}" Width="13" Height="13"/>
                            <Image Visibility="{Binding HasLG3, Converter={StaticResource BoolToVisConverter}}" Source="{Binding ImageLG}" Width="13" Height="13"/>
                            <Image Visibility="{Binding HasLG4, Converter={StaticResource BoolToVisConverter}}" Source="{Binding ImageLG}" Width="13" Height="13"/>
                          </StackPanel>
                        </Border>
                      </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                  </DataGridTemplateColumn>
                </DataGrid.Columns>
              </DataGrid>
            </StackPanel>
          </Border>
        </TabItem>
        <TabItem Header="End of Game Stats" Background="Magenta">
          <TabItem.Content>
            <Border Background="Black">
              <DataGrid ItemsSource="{Binding Path=FinalStatsPlayers}"
                        CanUserAddRows="False" 
                        CanUserDeleteRows="False" 
                        AutoGenerateColumns="False" 
                        Background="Transparent"
                        Width="Auto" 
                        Height="Auto"
                        IsReadOnly="True"
                        FrozenColumnCount="10"
                        RowStyle="{StaticResource StatsRowStyle}"
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Stretch"
                        VerticalGridLinesBrush="Black"
                        RowHeaderWidth="0"
                        x:Name="EOGDataGrid"
                        Initialized="EOGDataGrid_Initialized" ColumnReordered="EOGDataGrid_ColumnReordered">
                <DataGrid.Columns>
                  <DataGridTextColumn Header="Ping" Binding="{Binding Path=AveragePing}" Width="35"/>
                  <DataGridTextColumn Header="PL" Binding="{Binding Path=AveragePL}" Width="25"/>
                  <DataGridTextColumn Header="Name" Binding="{Binding Path=Name}" MinWidth="100"/>
                  <DataGridTextColumn Header="Team" Binding="{Binding Path=Team}" TextBlock.TextAlignment="Center"/>
                  <DataGridTemplateColumn Header="Score" CellStyle="{StaticResource ScoreCellStyle}" SortDirection="Descending">
                    <DataGridTemplateColumn.CellTemplate>
                      <DataTemplate>
                        <Border Background="{Binding TeamColor}">
                          <TextBlock Text="{Binding Path=Score}" HorizontalAlignment="Right"/>
                        </Border>
                      </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                  </DataGridTemplateColumn>

                  <DataGridTextColumn Header="Rating" Binding="{Binding Path=Rating}"/>
                  <DataGridTextColumn Header="Avg Power" Binding="{Binding Path=AveragePower}"/>
                  <DataGridTextColumn Header="Eff" Binding="{Binding Path=Efficiency}" Foreground="Yellow"/>
                  <DataGridTextColumn Header="Dths" Binding="{Binding Path=Deaths}"/>
                  <DataGridTextColumn Header="E Kills" Binding="{Binding Path=KillsEnemy}"/>
                  <DataGridTextColumn Header="LG" Binding="{Binding Path=KillsLG}"/>
                  <DataGridTextColumn Header="RL" Binding="{Binding Path=KillsRL}"/>
                  <DataGridTextColumn Header="GL" Binding="{Binding Path=KillsGL}"/>
                  <DataGridTextColumn Header="NG" Binding="{Binding Path=KillsNG}"/>
                  <DataGridTextColumn Header="SG" Binding="{Binding Path=KillsSG}"/>
                  <DataGridTextColumn Header="LG%" Binding="{Binding Path=LGPercent}"/>
                  <DataGridTextColumn Header="RL%" Binding="{Binding Path=RLPercent}"/>
                  <DataGridTextColumn Header="GL%" Binding="{Binding Path=GLPercent}"/>
                  <DataGridTextColumn Header="SG%" Binding="{Binding Path=SGPercent}"/>
                  <DataGridTextColumn Header="SSG%" Binding="{Binding Path=SSGPercent}"/>

                  <DataGridTextColumn Header="RL Avg Dmg" Binding="{Binding Path=RLAvgDamage}"/>
                  <DataGridTextColumn Header="RL DH" Binding="{Binding Path=RLDirectHits}"/>

                  
                  <!--<DataGridTextColumn Header="(AFS)" Binding="{Binding Path=AverageFragStreak}" Width="35"/>-->
                  <DataGridTextColumn Header="Streak" Binding="{Binding Path=MaxFragStreak}"/>
                  <DataGridTextColumn Header="w/Quad" Binding="{Binding Path=KillsWithQuad}"/>
                  <DataGridTextColumn Header="QStreak" Binding="{Binding Path=MaxQuadStreak}"/>
                  <DataGridTextColumn Header="SpawnFrags" Binding="{Binding Path=KillsSpawn}"/>
                  <DataGridTextColumn Header="Kill RL" Binding="{Binding Path=KilledRL}" Foreground="Yellow"/>
                  <DataGridTextColumn Header="Kill LG" Binding="{Binding Path=KilledLG}"/>
                  <DataGridTextColumn Header="Kill Q" Binding="{Binding Path=KilledQuad}" Foreground="Yellow"/>
                  <DataGridTextColumn Header="TK" Binding="{Binding Path=KillsTeam}" Foreground="Yellow"/>
                  <DataGridTextColumn Header="Dths (TK)" Binding="{Binding Path=DeathsTeam}"/>
                  <DataGridTextColumn Header="Dths spwns" Binding="{Binding Path=DeathsSpawns}"/>
                  <DataGridTextColumn Header="Suici" Binding="{Binding Path=Suicides}"/>

                  <DataGridTextColumn Header="Dmg Eff" Binding="{Binding Path=DamageEfficiency}"/>
                  <DataGridTextColumn Header="Dmg Gvn" Binding="{Binding Path=DamageGiven}"/>
                  <DataGridTextColumn Header="Dmg Tm" Binding="{Binding Path=DamageTeam}"/>
                  <DataGridTextColumn Header="Dmg Tkn" Binding="{Binding Path=Damage}"/>
                  <DataGridTextColumn Header="Dmg Tkn Arm" Binding="{Binding Path=DamageArmor}"/>
                  <DataGridTextColumn Header="Dmg Tkn Hlth" Binding="{Binding Path=DamageHealth}"/>
                  <DataGridTextColumn Header="Dmg % Armor" Binding="{Binding Path=PercentArmor}"/>
                  <DataGridTextColumn Header="Armr Pickup" Binding="{Binding Path=Armor}"/>
                  <DataGridTextColumn Header="Hlth Pickup" Binding="{Binding Path=Health}"/>

                  <DataGridTextColumn Header="RA" Binding="{Binding Path=ItemCountRA}" Width="25"/>
                  <DataGridTextColumn Header="YA" Binding="{Binding Path=ItemCountYA}" Width="25"/>
                  <DataGridTextColumn Header="GA" Binding="{Binding Path=ItemCountGA}" Width="25"/>
                  <DataGridTextColumn Header="MH" Binding="{Binding Path=ItemCountMega}" Width="25"/>
                  <DataGridTextColumn Header="Qu" Binding="{Binding Path=ItemCountQuad}" Width="25" Foreground="Yellow"/>
                  <DataGridTextColumn Header="Pe" Binding="{Binding Path=ItemCountPent}" Width="25"/>
                  <DataGridTextColumn Header="Ey" Binding="{Binding Path=ItemCountEyes}" Width="25"/>
                  <!--<DataGridTextColumn Header="(Armor)" Binding="{Binding Path=ItemCountSSG}" Width="50"/>
              <DataGridTextColumn Header="(Health)" Binding="{Binding Path=ItemCountNG}" Width="50"/>
              <DataGridTextColumn Header="(A/H)" Binding="{Binding Path=ItemCountSNG}" Width="40"/>-->
                  <DataGridTextColumn Header="GL" Binding="{Binding Path=ItemCountGL}" Width="30"/>
                  <DataGridTextColumn Header="RL" Binding="{Binding Path=ItemCountRL}" Width="30"/>
                  <DataGridTextColumn Header="RL (Tm Pack)" Binding="{Binding Path=ItemCountRLFromTeamPack}"/>
                  <DataGridTextColumn Header="RL (E Pack)" Binding="{Binding Path=ItemCountRLFromEnemyPack}"/>
                  <DataGridTextColumn Header="LG" Binding="{Binding Path=ItemCountLG}" Width="30"/>
                  <DataGridTextColumn Header="LG (Tm Pack)" Binding="{Binding Path=ItemCountLGFromTeamPack}"/>
                  <DataGridTextColumn Header="LG (E Pack)" Binding="{Binding Path=ItemCountLGFromTeamPack}"/>

                  <DataGridTextColumn Header="RL NoDrop" Binding="{Binding Path=ItemCountRLNoDrop}"/>
                  <DataGridTextColumn Header="RL Drop" Binding="{Binding Path=ItemCountRLDropped}"/>
                  <DataGridTextColumn Header="RL Drop %" Binding="{Binding Path=TP_RLDropPercent}" Foreground="Blue"/>
                  <DataGridTextColumn Header="RL Lost" Binding="{Binding Path=ItemCountRLLost}" Foreground="Yellow"/>
                  <DataGridTextColumn Header="RL Donated" Binding="{Binding Path=ItemCountRLDonated}"/>
                  <DataGridTextColumn Header="LG NoDrop" Binding="{Binding Path=ItemCountLGNoDrop}"/>
                  <DataGridTextColumn Header="LG Drop" Binding="{Binding Path=ItemCountLGDropped}"/>
                  <DataGridTextColumn Header="LG Lost" Binding="{Binding Path=ItemCountLGLost}"/>
                  <DataGridTextColumn Header="LG Donated" Binding="{Binding Path=ItemCountLGDonated}"/>

                  <DataGridTextColumn Header="Kills w/ E-Pack" Binding="{Binding Path=KillsFromEnemyPack}"/>
                  <DataGridTextColumn Header="Team Dths from PackDrop" Binding="{Binding Path=TeamDeathsFromDroppedPack}"/>

                  <DataGridTextColumn Header="Avg Speed" Binding="{Binding Path=AverageSpeed}"/>

                  <DataGridTextColumn Header="Kills w/RL" Binding="{Binding Path=KillsWithRL}"/>
                  <DataGridTextColumn Header="Kills per RL" Binding="{Binding Path=KillsPerRL}"/>
                  <DataGridTextColumn Header="Lives to get RL" Binding="{Binding Path=LivesToGetRL}"/>
                  <DataGridTextColumn Header="Time w/RL" Binding="{Binding Path=TimeWithRL}" Foreground="Yellow"/>
                  <DataGridTextColumn Header="Avg Time per RL" Binding="{Binding Path=AverageTimeWithRL}"/>
                  <DataGridTextColumn Header="Avg Time to get RL" Binding="{Binding Path=AverageTimeToGetRL}"/>

                  <DataGridTextColumn Header="TP_Rating" Binding="{Binding Path=TP_Rating}"/>
                  <DataGridTextColumn Header="TP_AvgPower" Binding="{Binding Path=TP_AvgPower}"/>
                  <DataGridTextColumn Header="TP_KillRLLG" Binding="{Binding Path=TP_KillRLLG}"/>
                  <DataGridTextColumn Header="TP_KillQuad" Binding="{Binding Path=TP_KillQuad}"/>
                  <DataGridTextColumn Header="TP_RA" Binding="{Binding Path=TP_RA}"/>
                  <DataGridTextColumn Header="TP_YA" Binding="{Binding Path=TP_YA}"/>
                  <DataGridTextColumn Header="TP_GA" Binding="{Binding Path=TP_GA}"/>
                  <DataGridTextColumn Header="TP_Quad" Binding="{Binding Path=TP_Quad}"/>
                  <DataGridTextColumn Header="TP_Pent" Binding="{Binding Path=TP_Pent}"/>
                  <DataGridTextColumn Header="TP_Eyes" Binding="{Binding Path=TP_Eyes}"/>
                  <DataGridTextColumn Header="TP_RLLGLost" Binding="{Binding Path=TP_RLLGLost}"/>
                  <DataGridTextColumn Header="TP_RLLGDonated" Binding="{Binding Path=TP_RLLGDonated}"/>
                  <DataGridTextColumn Header="TP_RLTime" Binding="{Binding Path=TP_RLTime}"/>

                  <DataGridTextColumn Header="RLvsRL W" Binding="{Binding Path=RLvsRLWon}"/>
                  <DataGridTextColumn Header="RLvsRL L" Binding="{Binding Path=RLvsRLLost}"/>
                  <DataGridTextColumn Header="RLvsRL %" Binding="{Binding Path=RLvsRLPercent}" Foreground="Yellow"/>
                  <DataGridTextColumn Header="RLvsX W" Binding="{Binding Path=RLvsXWon}"/>
                  <DataGridTextColumn Header="RLvsX L" Binding="{Binding Path=RLvsXLost}"/>
                  <DataGridTextColumn Header="RLvsX %" Binding="{Binding Path=RLvsXPercent}" Foreground="Yellow"/>
                  <DataGridTextColumn Header="XvsRL W" Binding="{Binding Path=XvsRLWon}"/>
                  <DataGridTextColumn Header="XvsRL L" Binding="{Binding Path=XvsRLLost}"/>
                  <DataGridTextColumn Header="XvsRL %" Binding="{Binding Path=XvsRLPercent}" Foreground="Yellow"/>
                  <DataGridTextColumn Header="XvsX W" Binding="{Binding Path=XvsXWon}"/>
                  <DataGridTextColumn Header="XvsX L" Binding="{Binding Path=XvsXLost}"/>
                  <DataGridTextColumn Header="XvsX %" Binding="{Binding Path=XvsXPercent}" Foreground="Yellow"/>
                </DataGrid.Columns>
              </DataGrid>
            </Border>
          </TabItem.Content>
        </TabItem>
        <TabItem Header="Server Info">
          <Border>
            <StackPanel Orientation="Horizontal">
              <Grid Margin="10" TextBlock.FontSize="10">
                <Grid.RowDefinitions>
                  <RowDefinition Height="16"/>
                  <RowDefinition Height="16"/>
                  <RowDefinition Height="16"/>
                  <RowDefinition Height="16"/>
                  <RowDefinition Height="16"/>
                  <RowDefinition Height="16"/>
                  <RowDefinition Height="16"/>
                  <RowDefinition Height="16"/>
                  <RowDefinition Height="16"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="70"/>
                  <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0" Text="ServerDemo:" Foreground="Yellow"/>
                <TextBlock Grid.Column="0" Grid.Row="1" Text="Hostname:" Foreground="Yellow"/>
                <TextBlock Grid.Column="0" Grid.Row="2" Text="Map:" Foreground="Yellow"/>
                <TextBlock Grid.Column="0" Grid.Row="3" Text="Fraglimit:" Foreground="Yellow"/>
                <TextBlock Grid.Column="0" Grid.Row="4" Text="Watervis:" Foreground="Yellow"/>
                <TextBlock Grid.Column="0" Grid.Row="5" Text="Antilag:" Foreground="Yellow"/>
                <TextBlock Grid.Column="0" Grid.Row="6" Text="Version:" Foreground="Yellow"/>
                <TextBlock Grid.Column="0" Grid.Row="7" Text="Timelimit:" Foreground="Yellow"/>
                <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding ServerInfo.ServerDemo}" Foreground="White"/>
                <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding ServerInfo.Hostname}" Foreground="White"/>
                <TextBlock Grid.Column="1" Grid.Row="2" Text="{Binding ServerInfo.Map}" Foreground="White"/>
                <TextBlock Grid.Column="1" Grid.Row="3" Text="{Binding ServerInfo.Fraglimit}" Foreground="White"/>
                <TextBlock Grid.Column="1" Grid.Row="4" Text="{Binding ServerInfo.Watervis}" Foreground="White"/>
                <TextBlock Grid.Column="1" Grid.Row="5" Text="{Binding ServerInfo.Antilag}" Foreground="White"/>
                <TextBlock Grid.Column="1" Grid.Row="6" Text="{Binding ServerInfo.Version}" Foreground="White"/>
                <TextBlock Grid.Column="1" Grid.Row="7" Text="{Binding ServerInfo.Timelimit}" Foreground="White"/>
              </Grid>
              <Grid Margin="10" TextBlock.FontSize="10">
                <Grid.RowDefinitions>
                  <RowDefinition Height="16"/>
                  <RowDefinition Height="16"/>
                  <RowDefinition Height="16"/>
                  <RowDefinition Height="16"/>
                  <RowDefinition Height="16"/>
                  <RowDefinition Height="16"/>
                  <RowDefinition Height="16"/>
                  <RowDefinition Height="16"/>
                  <RowDefinition Height="16"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="80"/>
                  <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0" Text="Teamplay:" Foreground="Yellow"/>
                <TextBlock Grid.Column="0" Grid.Row="1" Text="Deathmatch:" Foreground="Yellow"/>
                <TextBlock Grid.Column="0" Grid.Row="2" Text="Max clients:" Foreground="Yellow"/>
                <TextBlock Grid.Column="0" Grid.Row="3" Text="Max spectators:" Foreground="Yellow"/>
                <TextBlock Grid.Column="0" Grid.Row="4" Text="Game dir:" Foreground="Yellow"/>
                <TextBlock Grid.Column="0" Grid.Row="5" Text="Max FPS:" Foreground="Yellow"/>
                <TextBlock Grid.Column="0" Grid.Row="6" Text="KTX Version:" Foreground="Yellow"/>
                <TextBlock Grid.Column="0" Grid.Row="7" Text="KTX Build:" Foreground="Yellow"/>
                <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding ServerInfo.Teamplay}" Foreground="White"/>
                <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding ServerInfo.Deathmatch}" Foreground="White"/>
                <TextBlock Grid.Column="1" Grid.Row="2" Text="{Binding ServerInfo.MaxClients}" Foreground="White"/>
                <TextBlock Grid.Column="1" Grid.Row="3" Text="{Binding ServerInfo.MaxSpectators}" Foreground="White"/>
                <TextBlock Grid.Column="1" Grid.Row="4" Text="{Binding ServerInfo.GameDir}" Foreground="White"/>
                <TextBlock Grid.Column="1" Grid.Row="5" Text="{Binding ServerInfo.MaxFPS}" Foreground="White"/>
                <TextBlock Grid.Column="1" Grid.Row="6" Text="{Binding ServerInfo.KTXVersion}" Foreground="White"/>
                <TextBlock Grid.Column="1" Grid.Row="7" Text="{Binding ServerInfo.KTXBuild}" Foreground="White"/>
              </Grid>
            </StackPanel>
          </Border>
        </TabItem>      
      </TabControl>
    </Grid>
  </Grid>
</UserControl>
