<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:QuantumBitDesigns.Charting"
>
 
  <DataTemplate DataType="{x:Type local:ChartViewModel}">
    <local:ChartView ViewModel="{Binding}" DataContext="{Binding}"/>
  </DataTemplate>

  <Style x:Key="{x:Type local:ChartRangeSlider}" TargetType="{x:Type local:ChartRangeSlider}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type local:ChartRangeSlider}">
          <StackPanel Orientation="Horizontal" Name="PART_RangeSliderContainer">
            <Rectangle Name="PART_LeftEdge" Fill="#AA000000"/>
            <Thumb Name="PART_LeftThumb" Cursor="SizeWE">
              <Thumb.Style>
                <Style TargetType="{x:Type Thumb}">
                  <Setter Property="Template">
                    <Setter.Value>
                      <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border Padding="0" Background="#33FFFFFF"/>
                      </ControlTemplate>
                    </Setter.Value>
                  </Setter>
                </Style>
              </Thumb.Style>
            </Thumb>
            <Thumb Name="PART_MiddleThumb" Cursor="ScrollAll" MinWidth="10">
              <Thumb.Style>
                <Style TargetType="{x:Type Thumb}">
                  <Setter Property="Template">
                    <Setter.Value>
                      <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border Padding="0" Background="#00000000"/>
                      </ControlTemplate>
                    </Setter.Value>
                  </Setter>
                </Style>
              </Thumb.Style>
            </Thumb>
            <Thumb Name="PART_RightThumb" Cursor="SizeWE">
              <Thumb.Style>
                <Style TargetType="{x:Type Thumb}">
                  <Setter Property="Template">
                    <Setter.Value>
                      <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border Padding="0" Background="#33FFFFFF"/>
                      </ControlTemplate>
                    </Setter.Value>
                  </Setter>
                </Style>
              </Thumb.Style>
            </Thumb>
            <Rectangle Name="PART_RightEdge" Fill="#AA000000"/>
          </StackPanel>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>